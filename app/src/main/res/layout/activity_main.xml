<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 選択肢変更用の EditText -->
        <Button
            android:id="@+id/updateChoicesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢を更新" />

        <EditText
            android:id="@+id/choiceEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="選択肢1" />

        <EditText
            android:id="@+id/choiceEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="選択肢2" />

        <EditText
            android:id="@+id/choiceEditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="選択肢3" />

        <EditText
            android:id="@+id/choiceEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="選択肢4" />

        <!-- 選択肢ボタン -->
        <Button
            android:id="@+id/option1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢1" />

        <Button
            android:id="@+id/option2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢2" />

        <Button
            android:id="@+id/option3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢3" />

        <Button
            android:id="@+id/option4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選択肢4" />

        <LinearLayout
            android:id="@+id/selectedItemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/gradeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="採点" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="クリア"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
